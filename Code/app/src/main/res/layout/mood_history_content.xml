<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/mood_list_custom_shape">
    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/mood_list_view_image"
            android:padding="2dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:id="@+id/mood_list_view_moodText"
            android:layout_toRightOf="@+id/mood_list_view_image"
            android:textColor="@color/colorWriting"
            android:fontFamily="monospace"
            android:text="Angry">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWriting"
            android:id="@+id/mood_list_view_dateText"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/mood_list_view_moodText"
            android:layout_alignParentTop="true"
            android:text="02/02/19">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWriting"
            android:id="@+id/mood_list_view_timeText"
            android:layout_gravity="center"
            android:text="12:05"
            android:layout_below="@+id/mood_list_view_dateText"
            android:layout_alignLeft="@id/mood_list_view_dateText"
            android:textSize="20sp">
        </TextView>
    </LinearLayout>
    </RelativeLayout>






</androidx.cardview.widget.CardView>


