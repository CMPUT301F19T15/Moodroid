<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/list_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:padding="2dp"
        android:src="@drawable/mood_list_custom_shape"></ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mood_list_view_moodText"
            android:layout_width="fill_parent"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Angry"
            android:textColor="@color/colorWriting"
            android:textSize="14sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/follow_deny_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Deny" />

            <Button
                android:id="@+id/follow_accept_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Accept" />

            <TextView
                android:id="@+id/mood_list_date"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>



