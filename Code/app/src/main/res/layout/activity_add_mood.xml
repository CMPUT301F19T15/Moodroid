<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A2531"
    tools:context=".ui.AddMood">

    <RelativeLayout
        android:id="@+id/wheel"
        android:layout_width="380dp"
        android:layout_height="481dp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/centerButton"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="133dp"
            android:textSize="70dp"
            android:layout_marginLeft="133dp"
            android:layout_marginTop="189dp"
            android:background="@drawable/button_default" />


        <Button
            android:id="@+id/Annoyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="43dp"
            android:textSize="70dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="119dp"
            android:background="@color/fui_transparent"/>

        <Button
            android:id="@+id/Happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="70dp"
            android:layout_marginStart="169dp"
            android:layout_marginLeft="169dp"
            android:layout_marginTop="65dp"
            android:background="@color/fui_transparent"/>

        <Button
            android:id="@+id/Mad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textSize="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="316dp"
            android:background="@color/fui_transparent"/>

        <Button
            android:id="@+id/Sad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="169dp"
            android:layout_marginLeft="166dp"
            android:layout_marginTop="389dp"
            android:background="@color/fui_transparent"/>

        <Button
            android:id="@+id/Scared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="70dp"
            android:layout_marginStart="292dp"
            android:layout_marginLeft="292dp"
            android:layout_marginTop="324dp"
            android:background="@color/fui_transparent"/>

        <Button
            android:id="@+id/Sick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textSize="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="292dp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="121dp"
            android:layout_marginRight="32dp"
            android:background="@color/fui_transparent"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="How do you feel?"
        android:textColor="@color/colorWriting"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/wheel">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>