<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A2531"
    tools:context=".ui.AddMood">

    <RelativeLayout
        android:id="@+id/wheel"
        android:layout_width="380dp"
        android:layout_height="481dp"
        android:layout_marginTop="30sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageButton
            android:id="@+id/centerButton"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="124dp"
            android:layout_marginLeft="124dp"
            android:layout_marginTop="194dp"
            android:background="@drawable/button_default" />

        <ImageButton
            android:id="@+id/Annoyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="119dp"
            android:background="@drawable/button_default"
            android:src="@drawable/annoyed" />

        <ImageButton
            android:id="@+id/Happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="166dp"
            android:layout_marginLeft="166dp"
            android:layout_marginTop="71dp"
            android:background="@drawable/button_default"
            android:src="@drawable/happy" />

        <ImageButton
            android:id="@+id/Mad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="332dp"
            android:background="@drawable/button_default"
            android:src="@drawable/mad" />

        <ImageButton
            android:id="@+id/Sad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="166dp"
            android:layout_marginLeft="166dp"
            android:layout_marginTop="395dp"
            android:background="@drawable/button_default"
            android:src="@drawable/sad" />

        <ImageButton
            android:id="@+id/Scared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="299dp"
            android:layout_marginLeft="299dp"
            android:layout_marginTop="332dp"
            android:background="@drawable/button_default"
            android:src="@drawable/scared" />

        <ImageButton
            android:id="@+id/Sick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="288dp"
            android:layout_marginLeft="288dp"
            android:layout_marginTop="121dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/button_default"
            android:src="@drawable/sick" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="How do you feel?"
        android:textColor="@color/colorWriting"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/wheel">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>